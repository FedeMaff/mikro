{
    "name": "m4ffucci/mikro",
    "description": "A PHP microservice ready for implementation",
    "type": "library",
    "license": "Property",
    "authors": [
        {
            "name": "Federico Maffucci",
            "email": "m4ffucci@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "require": {
        "php": ">=7.4",
        "haydenpierce/class-finder": "^0.4.3",
        "willdurand/hateoas": "^3.7",
        "symfony/yaml": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "Mikro\\": "src/"
        },
        "files": [
          "src/Constants.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Mikro\\": "src/",
            "MikroTest\\": "tests/"
        },
        "files": [
          "src/Constants.php"
        ]
    }
}
